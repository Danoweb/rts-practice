@model IEnumerable<PracticeCarriers.Models.Carriers>

@{
    ViewBag.Title = "Index";
}

<h2>Carriers List</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">
        Create new
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    </a>
</p>
<table class="table table-striped table-hover table-bordered table-condensed" id="carriers-list-table" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MCNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOTNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StateID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebURL)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            
            <th>
                <!-- ADD A COLUMN FOR ACTION BUTTONS-->
                &nbsp;
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MCNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOTNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.States.StateAbbrev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebURL)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            
            <td>
                <!--@Html.ActionLink("Edit", "Edit", new { id = item.CarrierID }, new { @class = "btn btn-success" })-->
                <a href="@Url.Action("Edit", new { id = item.CarrierID })" class="btn btn-info">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>

                <!--@Html.ActionLink("Details", "Details", new { id = item.CarrierID }, new { @class = "btn btn-info" })-->
                <a href="@Url.Action("Details", new { id = item.CarrierID })" class="btn btn-success">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </a>
                <!--@Html.ActionLink("Delete", "Delete", new { id = item.CarrierID }, new { @class = "btn btn-danger" })-->
                <a href="@Url.Action("Delete", new { id = item.CarrierID })" class="btn btn-danger">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#carriers-list-table').DataTable({
                responsive: true,
                columnDefs: [
                    { responsivePriority: 1, targets: 0 },
                    { responsivePriority: 1, targets: 1 },
                    { responsivePriority: 1, targets: -1 }
                ],
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'excel', 'pdf'
                ]
            });
        });
    </script>
}